name: Linear Sync (tasks.md)

on:
  push:
    branches:
      - 'feature/**'
    paths:
      - '**/tasks.md'

jobs:
  sync:
    runs-on: ubuntu-latest
    permissions:
      contents: write
    steps:
      - uses: actions/checkout@v4
        with:
          fetch-depth: 0
      - uses: actions/setup-node@v4
        with:
          node-version: 'lts/*'
      - name: Run Linear sync
        env:
          LINEAR_API_KEY: ${{ secrets.LINEAR_API_KEY }}
          LINEAR_TEAM_KEY: ${{ secrets.LINEAR_TEAM_KEY }}
          GITHUB_ACTOR: ${{ github.actor }}
          GITHUB_SHA: ${{ github.sha }}
          GITHUB_REF_NAME: ${{ github.ref_name }}
        run: node .github/scripts/linear-sync.js
      - name: Commit mapping updates (if any)
        run: |
          if [ -n "$(git status --porcelain | grep 'linear-map.json')" ]; then
            git config user.name "github-actions[bot]"
            git config user.email "41898282+github-actions[bot]@users.noreply.github.com"
            git add "**/linear-map.json"
            git commit -m "chore(linear): update mapping from tasks.md"
            git push
          fi